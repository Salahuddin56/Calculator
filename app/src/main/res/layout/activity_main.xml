<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">


    <Button
        android:id="@+id/Scientific"
        style="@style/ActionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/actionButton"
        android:backgroundTint="@android:color/background_dark"
        android:text="Scientific"
        android:textColor="@color/actionButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Expression"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/Expression"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/Expression"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Clear"
                    style="@style/ActionButtonStyle"
                    android:text="CE"/>

                <Button
                    android:id="@+id/Open"
                    style="@style/ActionButtonStyle"
                    android:text="("/>

                <Button
                    android:id="@+id/Close"
                    style="@style/ActionButtonStyle"
                    android:text=")"/>

                <Button
                    android:id="@+id/Divide"
                    style="@style/ActionButtonStyle"
                    android:text="/"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Seven"
                    style="@style/NumberButtonStyle"
                    android:text="7"/>

                <Button
                    android:id="@+id/Eight"
                    style="@style/NumberButtonStyle"
                    android:text="8"/>

                <Button
                    android:id="@+id/Nine"
                    style="@style/NumberButtonStyle"
                    android:text="9"/>

                <Button
                    android:id="@+id/Multiply"
                    style="@style/ActionButtonStyle"
                    android:text="*"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Four"
                    style="@style/NumberButtonStyle"
                    android:text="4"/>

                <Button
                    android:id="@+id/Five"
                    style="@style/NumberButtonStyle"
                    android:text="5"/>

                <Button
                    android:id="@+id/Six"
                    style="@style/NumberButtonStyle"
                    android:text="6"/>

                <Button
                    android:id="@+id/Minus"
                    style="@style/ActionButtonStyle"
                    android:text="-"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/One"
                    style="@style/NumberButtonStyle"
                    android:text="1"/>

                <Button
                    android:id="@+id/Two"
                    style="@style/NumberButtonStyle"
                    android:text="2"/>

                <Button
                    android:id="@+id/Three"
                    style="@style/NumberButtonStyle"
                    android:text="3"/>

                <Button
                    android:id="@+id/Plus"
                    style="@style/ActionButtonStyle"
                    android:text="+"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Dot"
                    style="@style/NumberButtonStyle"
                    android:text="."/>

                <Button
                    android:id="@+id/Zero"
                    style="@style/NumberButtonStyle"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/Backspace"
                    style="@style/NumberButtonStyle"
                    android:src="@drawable/backspace"
                    android:scaleType="center"/>

                /*android:id="@+id/Backspace"
                style="@style/NumberButtonStyle"
                android:text="back"/>*/


                <Button
                    android:id="@+id/Equal"
                    style="@style/ActionButtonStyle"
                    android:text="="/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    </RelativeLayout>
